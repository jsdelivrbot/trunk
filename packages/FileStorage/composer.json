{
  "name": "petrknap/php-filestorage",
  "description": "File storage for PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Petr Knap",
      "email": "dev@petrknap.cz",
      "homepage": "http://petrknap.cz",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/petrknap/php-filestorage",
  "config": {
    "preferred-install": "dist"
  },
  "require": {
    "php": ">=5.5",
    "nunzion/php-expect": "^1.1",
    "league/flysystem": "^1.0",
    "petrknap/php-migrationtool": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "petrknap/php-profiler": "^0.2.0"
  },
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --testsuite main 2>/dev/null"
    ],
    "post-autoload-dump": [
      "@test"
    ]
  },
  "autoload": {
    "psr-4": {
      "PetrKnap\\Php\\FileStorage\\": "src/FileStorage",
      "PetrKnap\\Php\\FileStorage\\Test\\": "tests/FileStorage"
    }
  }
}
