{% extends "@MarkdownWeb/layout.html.twig" %}

{% block body_content %}
    {% block menu %}
        <div class="masthead">
            {% block menu_content %}
                {{ render_index("@MarkdownWeb/menu.html.twig", {"in_menu": true}, "priority:asc") }}
            {% endblock %}
            <div class="h1">{{ site.title }}</div>
        </div>
    {% endblock %}
    {% block page %}
        <div>
            {% block page_content %}
                <h1 class="h2">{{ page.title }}</h1>
                {{ content|raw }}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
