{% extends "@MarkdownWeb/web.html.twig" %}

{% block page %}
    {% block categories %}
        {{ render_index("@MarkdownWeb/blog_menu.html.twig", {"menu": "blog"}, "title:asc") }}
    {% endblock %}
    {% block posts %}
        {% block page_content %}
            {{ content|raw }}
        {% endblock %}
        {{ render_index("@MarkdownWeb/blog_posts.html.twig", {"layout": "blog_post.html", "category": page.category}, "date:desc") }}
    {% endblock %}
{% endblock %}
