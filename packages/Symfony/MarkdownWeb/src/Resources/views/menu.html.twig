{% extends "@MarkdownWeb/list.html.twig" %}

{% block list %}
    <ul class="nav nav-pills pull-right">
        {% block list_content %}{{ parent() }}{% endblock %}
    </ul>
{% endblock %}

{% block item %}
    <li{% if item.url == page.url or (item.url|length > 1 and item.url|last == "/" and page.url starts with item.url) %} class="active"{% endif %}>
        {% block item_content %}
            <a href="{{ item.url }}">{{ item.title }}</a>
        {% endblock %}
    </li>
{% endblock %}
