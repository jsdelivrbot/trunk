{% extends "@MarkdownWeb/list.html.twig" %}

{% block list %}
    <div class="row">
        {% block list_content %}{{ parent() }}{% endblock %}
    </div>
{% endblock %}

{% block item %}
    <div class="shop-preview col-xs-12 col-sm-6 col-md-4">
        {% block item_content %}
            <h2 class="h4">
                <a href="{{ item.url }}">
                    {{ item.title }}
                </a>
            </h2>
            <div>
                <a href="javascript:toCart('{{ item.url }}')" class="btn btn-xs btn-primary pull-left">
                    <span class="glyphicon glyphicon-shopping-cart"></span>
                    Koupit
                </a>
                <span class="shop-price pull-right label label-primary">500&nbsp;Kƒç</span>
                <img src="{{ item.url[:-4] }}png" class="img-thumbnail img-responsive">
            </div>
            <p>{{ item.description }}</p>
        {% endblock %}
    </div>
{% endblock %}
