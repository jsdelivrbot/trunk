{% extends "@MarkdownWeb/list.html.twig" %}

{% block list %}
    <div class="list-group">
        {% block list_content %}{{ parent() }}{% endblock %}
    </div>
{% endblock %}

{% block item %}
    {% block item_content %}
        <a href="{{ item.url }}"
           class="list-group-item{% if url == item.url or (item.gallery is defined and url starts with item.url) or (item.category is defined and item.category is not empty and item.category == page.category) %} active{% endif %}">
            {{ item.title|raw }}
        </a>
    {% endblock %}
{% endblock %}
