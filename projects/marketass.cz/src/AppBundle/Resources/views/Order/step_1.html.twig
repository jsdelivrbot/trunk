{% extends '@App/Order/summary.html.twig' %}

{% block item_amount %}
    <input type="number" name="items[{{ item.id }}]" value="{{ item.amount }}" class="form-control text-right" style="max-width: 75px">
{% endblock %}

{% block content %}
    <form class="form-horizontal">
        {{ parent() }}

        <div class="h4">Fakturační údaje</div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Jméno:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" value="{{ order.customer.name }}">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">E-mail:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" value="{{ order.customer.email }}">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="address">Adresa:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="address" name="address" rows="3">{{ order.customer.address }}</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="accepts" name="accepts" {% if order.customer.accepts %}checked{% endif %}>
                        Souhlasím s ...{# TODO link to PDF #}
                    </label>
                </div>
            </div>
        </div>
        <a href="javascript://void" class="btn btn-primary">Pokračovat</a>
    </form>
{% endblock %}
