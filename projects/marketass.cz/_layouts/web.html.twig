<!DOCTYPE html>
<html lang="cs">
<head>
    {% include meta.html.twig %}
    <title>{{ page.title }}</title>
    {% include cdn/bootstrap.html.twig to="head" %}
    {% include cdn/cookie_consent_2.html.twig to="head" %}
    <link rel="stylesheet" href="/assets/style.css">
</head>

<body>
<nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Menu</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">{{ site.name }}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li{% unless page.url contains "shop/" %} class="active"{% endunless %}><a href="/">web</a></li>
                <li{% if page.url contains "shop/" %} class="active"{% endif %}><a href="/shop/">e-shop</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div id="menu" class="col-xs-12 col-sm-3">
            <div class="list-group">
                <a href="#" class="list-group-item active">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
                <a href="#" class="list-group-item">Link</a>
            </div>
        </div>

        <div id="content" class="col-xs-12 col-sm-9 active">
            <p class="pull-right visible-xs">
                <button id="toggle-menu" type="button" class="btn btn-primary btn-xs">Menu</button>
            </p>
            {% if page.jumbotron %}
            <section class="jumbotron">
                <h1>{{ page.jumbotron.title }}</h1>
                <p>{{ page.jumbotron.more }}</p>
            </section>
            {% endif %}
            <section>{{ content }}</section>
        </div>
    </div>

    <hr>

    <footer>
        <p><span class="year">{{ "now" | date: "%Y" }}</span> &copy; {{ site.author }}</p>
    </footer>

</div>


{% include cdn/jQuery.html.twig to="body" %}
{% include cdn/bootstrap.html.twig to="body" %}
{% include cdn/cookie_consent_2.html.twig to="body" %}
<script type="application/javascript" src="/assets/script.js"></script>
{% include google_analytics.html.twig %}
</body>
</html>
