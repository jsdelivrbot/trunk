{
  "name": "petrknap/php-enum",
  "description": "Enumerated type for PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Petr Knap",
      "email": "dev@petrknap.cz",
      "homepage": "http://petrknap.cz",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/petrknap/php-enum",
  "config": {
    "preferred-install": "dist",
    "platform": {
      "php": "5.3.3"
    }
  },
  "require": {
    "php": ">=5.3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "scripts": {
    "tests/": [
      "sudo docker run -v $(pwd):/app --rm php:5.3-cli bash -c 'cd /app && php ./vendor/bin/phpunit'"
    ],
    "post-autoload-dump": [
      "@tests/"
    ]
  },
  "autoload": {
    "psr-4": {
      "PetrKnap\\Php\\Enum\\": "src/Enum",
      "PetrKnap\\Php\\Enum\\Test\\": "tests/Enum"
    }
  }
}
