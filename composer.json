{
    "name": "petrknap/php",
    "description": "Monolithic repository for petrknap/php-* packages",
    "type": "project",
    "license": "MIT",
    "homepage": "https://petrknap.github.io/php/",
    "authors": [
        {
            "name": "Petr Knap",
            "email": "dev@petrknap.cz"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "petrknap/php-enum": "*",
        "petrknap/php-filestorage": "*",
        "petrknap/php-profiler": "*",
        "petrknap/php-servicemanager": "*",
        "petrknap/php-singleton": "*"
    },
    "autoload": {
        "psr-4": {
            "PetrKnap\\Php\\Enum\\": "packages/Enum/src",
            "PetrKnap\\Php\\FileStorage\\": "packages/FileStorage/src",
            "PetrKnap\\Php\\Profiler\\": "packages/Profiler/src",
            "PetrKnap\\Php\\ServiceManager\\": "packages/ServiceManager/src",
            "PetrKnap\\Php\\Singleton\\": "packages/Singleton/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PetrKnap\\Php\\Enum\\Test\\": "packages/Enum/tests",
            "PetrKnap\\Php\\FileStorage\\Test\\": "packages/FileStorage/tests",
            "PetrKnap\\Php\\Profiler\\Test\\": "packages/Profiler/tests",
            "PetrKnap\\Php\\ServiceManager\\Test\\": "packages/ServiceManager/tests",
            "PetrKnap\\Php\\Singleton\\Test\\": "packages/Singleton/tests"
        }
    }
}
