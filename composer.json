{
  "name": "petrknap/php-migrationtool",
  "description": "Migration tool for PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "Petr Knap",
      "email": "dev@petrknap.cz",
      "homepage": "http://petrknap.cz",
      "role": "Developer"
    }
  ],
  "homepage": "https://github.com/petrknap/php-migrationtool",
  "config": {
    "platform": {
      "php": "5.3.3",
      "ext-dom": "1.0"
    }
  },
  "require": {
    "php": ">=5.3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8"
  },
  "scripts": {
    "tests/": [
      "sudo docker run -v $(pwd):/app --rm php:5.3-cli bash -c 'cd /app && php ./vendor/bin/phpunit'"
    ],
    "post-autoload-dump": [
      "@tests/"
    ]
  },
  "autoload": {
    "psr-4": {
      "PetrKnap\\Php\\MigrationTool\\": "src/MigrationTool",
      "PetrKnap\\Php\\MigrationTool\\Test\\": "tests/MigrationTool"
    }
  }
}
